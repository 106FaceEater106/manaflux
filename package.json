{
  "name": "manaflux",
  "version": "2.5.0",
  "description": "Manaflux downloads automatically your runes, itemsets, and summonerspells and injects them to your League client seamlessly!",
  "main": "src/main.js",
  "scripts": {
    "build": "build --win",
    "ship": "build --win --ia32 --x64 -p always",
    "test": "mocha ./tests",
    "start": "electron src/main.js --dev",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "League of Legends",
    "League",
    "assistant",
    "masteries",
    "runes",
    "perks",
    "automatic"
  ],
  "author": {
    "name": "Ryzzzen",
    "email": "ryzzzen@protonmail.me"
  },
  "license": "CC0-1.0",
  "devDependencies": {
    "@node-minify/core": "^4.1.2",
    "@node-minify/html-minifier": "^4.1.2",
    "@node-minify/sqwish": "^4.1.2",
    "@node-minify/terser": "^4.1.2",
    "@types/mocha": "^5.2.5",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "electron": "^3.0.9",
    "electron-builder": "^20.36.2",
    "electron-chromedriver": "^4.0.0-beta.1",
    "glob": "^7.1.4",
    "mocha": "^5.2.0",
    "rimraf": "^3.0.0",
    "spectron": "^5.0.0"
  },
  "repository": "https://github.com/Ryzzzen/manaflux",
  "build": {
    "appId": "com.github.ryzzzen.manaflux",
    "productName": "Manaflux",
    "copyright": "Copyright Â© 2019 Ryzzzen",
    "beforeBuild": "build/scripts/beforeBuild.js",
    "directories": {
      "app": "app"
    },
    "nsis": {
      "license": "LICENSE.md"
    }
  }
}
